page {
  font-size: 32rpx;
  color: #262626;
/*  background-image: url('http://bryanly.oss-cn-shenzhen.aliyuncs.com/choubg.png');
  background-repeat: repeat-y;*/
  background-color: #fde867;
  background-size: 100% 100%;
}

.description {
  width: 678rpx;
  height: 281rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 24rpx;
}

.description .time {
  position: absolute;
  bottom: 0;
  width: 100%;
  color: #fff;
  line-height: 44rpx;
}

.description .desc {
  position: absolute;
  bottom: 28%;
  width: 100%;
  padding: 0 26rpx;
  box-sizing: border-box;
  text-align: left;
}

.description .title {
  position: absolute;
  bottom: 60%;
  width: 100%;
  color: #f3365e;
  font-weight: bold;
  font-size: 28rpx;
}

.chanceCount {
  width: 678rpx;
  margin: 28rpx auto;
  text-align: center;
  font-weight: 600;
}

.chanceCount .count {
  color: #f3365e;
}

/**大转盘实现start**/

.container-out {
  height: 678rpx;
  width: 678rpx;
  background-color: #f3365e;
  margin: 0rpx auto;
  border-radius: 15rpx;
  box-shadow: 0 5px 0 #E81B54;
  position: relative;
}

.container-in {
  /*width: 580rpx;*/
  /*height: 530rpx;*/
  width: 100%;
  height: 100%;
  background-color: #f3365e;
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/**小圆球
box-shadow: inset 3px 3px 3px #fff2af;*/

.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.content-out {
  position: absolute;
  height: 210rpx;
  width: 210rpx;
  /* background-color: #f5f0fc; */
  border-radius: 15rpx;
   /*box-shadow: 0 5px 0 #d87fde; */
}

/**居中 加粗*/

.start-btn {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border-radius: 15rpx;
  height: 210rpx;
  width: 210rpx;
  /*background-repeat: no-repeat;*/
  /*background-size: 100% 100%;*/
  color: #F3365E;
  text-align: center;
  font-weight: bolder;
  line-height: 150rpx;
  z-index: 11;
}

.start-btn .text{
  position: relative;
  bottom: 10rpx;
}

.award-image {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  height: 182rpx;
  width: 182rpx;
}

/**大转盘结束end****/

.records{
  border: 4rpx solid #F3365E;
  border-radius: 10rpx;
}
.records .header{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  border-bottom: 1rpx solid #F3365E;
  margin: 0 20rpx;
}
.records .record{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  margin: 0 20rpx;
}

.records .title{
  color: #fff;
  background-color: #F3365E;
  border-radius: 50rpx;
  padding: 6rpx 20rpx;
}
.records .myaward{
  color: #F3365E;
  border-radius: 50rpx;
  padding: 6rpx 20rpx;
  border: 2rpx solid #F3365E;
}