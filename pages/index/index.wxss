/* pages/index/index.wxss */
page{
    width: 100%;
    height: 100%;
    overflow:hidden;
    padding: 18rpx;
    box-sizing: border-box;
    background: #EBEBEB;
}
.nav-item{
    background: #fff;
    border-radius: 7rpx;
    height: 122rpx;
    line-height: 122rpx;
    position: relative;
    margin-bottom: 18rpx;
}
.icon-type{
    width: 60rpx;
    height: 61rpx;
    margin-left: 26rpx;
    margin-top: 30.5rpx;
}
.nav-text{
    display: inline-block;
    height: 100%;
    vertical-align: top;
    font-size: 30rpx;
    margin-left: 26rpx;
}
.icon-left{
    width: 18rpx;
    height: 31rpx;
    position: absolute;
    top: 52rpx;
    right: 24rpx;
}