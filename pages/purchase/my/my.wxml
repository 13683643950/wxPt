<!--pages/purchase/my/my.wxml-->
<text></text>
<view class='tabs'>
    <text bindtap='changeTab' data-status="0" data-tab="1" class='tab {{flag == 1 ? "active" : ""}}'>全部</text>
    <text bindtap='changeTab' data-status="1" data-tab="2" class='tab {{flag == 2 ? "active" : ""}}'>待成团</text>
    <text bindtap='changeTab' data-status="2" data-tab="3" class='tab {{flag == 3 ? "active" : ""}}'>已成团</text>
    <text bindtap='changeTab' data-status="3" data-tab="4" class='tab {{flag == 4 ? "active" : ""}}'>拼团失败</text>
</view>
<view class="container">
    <scroll-view class="container-body" scroll-y="true" bindscroll="scrollHandle" lower-threshold="50" bindscrolltolower="scrollLoading">
        <view class="purchase-list">
            <block wx:for="{{activitylist}}" wx:key="{{item.id}}">
                <navigator  open-type='redirect' class="purchase-item" url="../pintuan/pintuan?id={{item.actId}}">
                    <view class="purchase-item-img">
                        <image class='image' src="{{item.actImgUrl}}" mode="aspectFill"></image>
                        <text class='status'>{{item.status}}</text>
                    </view>
                    <view class="purchase-item-text">
                        <view class="purchase-item-title">{{item.actName}}</view>
                        <view wx:if="{{item.status == 1}}" class="purchase-item-info btn-group">
                            <view class='left'>
                                再邀请
                                <text class="icon-price">{{item.count - item.groupNum }}</text>人购买即可享受优惠
                            </view>
                            <view class='right'>
                                <button type='warn' class='btn-purchase'>邀请好友 > </button>
                            </view>
                        </view>
                        <view wx:if="{{item.status == 2}}" class="purchase-item-info btn-group">
                            <view class='left'>
                                团购码：
                                <text class="icon-code">{{item.redeemCode}}</text>
                            </view>
                            <view class='right'>
                                <button class='btn-check-code'>查看二维码</button>
                            </view>
                        </view>
                    </view>
                </navigator>
            </block>
        </view>
    </scroll-view>
</view>