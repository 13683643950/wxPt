<view class='tabs'>
    <text bindtap='changeTab' data-status="0" class='tab {{status == 0 ? "active" : ""}}'>全部</text>
    <text bindtap='changeTab' data-status="1" class='tab {{status == 1 ? "active" : ""}}'>待成团</text>
    <text bindtap='changeTab' data-status="2" class='tab {{status == 2 ? "active" : ""}}'>已成团</text>
    <text bindtap='changeTab' data-status="3" class='tab {{status == 3 ? "active" : ""}}'>拼团失败</text>
</view>
<view class="container">
    <scroll-view class="container-body" style="height: 1300rpx;" scroll-y="true" bindscroll="scrollHandle" lower-threshold="50" bindscrolltolower="scrollLoading">
        <view class="purchase-list">
            <block wx:for="{{activitylist}}" wx:key="{{item.actId}}">
                <navigator open-type='redirect' class="purchase-item" url="../immediately/immediately?id={{item.actId}}&type=true">
                    <view class="purchase-item-img" style="background:url(../../../images/default_rect.png) center / cover no-repeat;">
                        <image class='image' src="{{item.actImgUrl}}" mode="aspectFill"></image>
                        <text class='status'>{{item.statusText}}</text>
                    </view>
                    <view class="purchase-item-text">
                        <view class="purchase-item-title">{{item.actName}}</view>
                        <view wx:if="{{item.status == 1}}" class="purchase-item-info btn-group">
                            <view class='left'>
                                再邀请
                                <text class="icon-price">{{item.count - item.groupNum }}</text>人购买即可享受优惠
                            </view>
                            <view class='right'>
                                <button type='warn' class='btn-purchase'>邀请好友 > </button>
                            </view>
                        </view>
                        <view wx:if="{{item.status == 2}}" class="purchase-item-info btn-group">
                            <view class='left'>
                                团购码：
                                <text class="icon-code">{{item.redeemCode}}</text>
                            </view>
                            <view class='right'>
                                <button class='btn-check-code'>查看二维码</button>
                            </view>
                        </view>
                    </view>
                </navigator>
            </block>
            <view wx:if="{{!activitylist.length || scrollEnd}}" class="emptyData">^_^没有数据了</view>
        </view>
    </scroll-view>
</view>