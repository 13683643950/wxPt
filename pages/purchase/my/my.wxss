/* pages/purchase/my/my.wxss */
@import '../purchase.wxss';

page {
  background-color: #f2f2f2;
}

.tabs {
  background-color: #fff;
  color: #333;
  height: 90rpx;
  line-height: 90rpx;
}

.tabs .tab {
  display: inline-block;
  text-align: center;
  width: 25%;
  font-size:29rpx;
}

.tabs .active {
  color: #e02e24;
  border-bottom: 1px solid #e02e24;
}

.purchase-item-info .icon-price {
  color: #e02e24;
  font-size: 25rpx;
  font-weight: 400;
}

.purchase-item-info .left {
  color: #acacac;
  font-size: 25rpx;
}

.purchase-item-info .btn-check-code {
  color: #e02e24;
  border: 1px solid #e02e24;
  background-color: #fff;
  box-sizing: border-box;
  white-space: nowrap;
}

.container-body {
  margin-top: 2px;
}
