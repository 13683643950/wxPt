<view class="drawer_screen" data-statu="close" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
    <!--drawer content-->
    <view class='imgBox'>
        <view class='tipTitle'>恭喜您已获奖</view>
        <image class='liwu' mode='aspectFit' src='{{liwuIcon}}'></image>
    </view>
    <view class='inputGroup'>
        <view class="drawer_title">输入车牌和手机号，立即拆奖</view>
        <view class="drawer_content">
            <view class="top grid">
                <label class="title col-0">车牌号：</label>
                <input class="input_base input_h30 col-1" data-name="carNum" placeholder='请填写车牌号' bindinput="bindKeyInput"></input>
            </view>
            <view class="top grid">
                <label class="title col-0">手机号码：</label>
                <input class="input_base input_h30 col-1" data-name="mobile" type="number" placeholder='请填写手机号' bindinput="bindKeyInput"></input>
            </view>
            <view class="top grid">
                <input class="input_base input_h30 col-1" data-name="vcode" type="number" placeholder='请填写验证码' bindinput="bindKeyInput"></input>
                <button class="getSMSCode" style="margin: 0;padding: 0 20rpx;font-size: 28rpx;vertical-align: bottom;" bindtap="getCode" disabled="{{isDjs?true:false}}">{{djsText}}</button>
            </view>
        </view>
        <view class='btnBox'>
            <view class="btn_ok" bindtap="getReward" data-statu="close">立即拆奖</view>
        </view>
    </view>
</view>