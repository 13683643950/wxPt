<!--pages/purchase/purchase.wxml-->
<view class="container">
    <view class='header'>
        <view bindtap='changeTab' data-type="award" class='tab'>
            <text class='my myaward {{activeTab?"tab-active":""}}'>我的奖品</text>
        </view>
        <view bindtap='changeTab' data-type="draw" class='tab'>
            <text class='my mydraw {{activeTab?"":"tab-active"}}'>我的抽奖</text>
        </view>
    </view>
    <!-- 我的奖品 -->
    <view class='myItems' wx:for="{{myitems}}" wx:key="{{item.id}}" wx:if="{{activeTab}}">
        <view class='top'>
            <view class='left'>
                <image mode='aspectFit' class='qrcodeImg' src='{{qrcodeImg}}' data-qrcode='{{item.redeemCodeUrl}}' bindtap="previewCode"></image>
                <text class='code'>{{item.redeemCode}}</text>
            </view>
            <view class='right'>
                <text class='date'>{{item.createDate}}</text>
            </view>
        </view>
        <view class='bottom'>
            <view class='left'>
                <image mode='aspectFit' class='myImg' src='{{item.imgUrl}}' binderror="imgError" data-err-img="myitems[{{index}}]"></image>
            </view>
            <view class='right'>
                <text class='right-1'>{{item.awardName}}</text>
                <text class='right-2'>数量：{{item.awardNum}}</text>
                <text class='right-3'>价值￥{{item.price}}</text>
            </view>
        </view>
    </view>
    <!-- 我的抽奖记录 -->
    <view class="purchase-list" wx:if="{{!activeTab}}">
        <navigator class="purchase-item" wx:for="{{myitems}}" open-type="redirect" wx:key="{{item.id}}" url="/pages/user/detail/detail?id={{item.id}}&userId={{userId}}&originId={{originId}}&orderId={{orderId}}">
            <view class='ac-item'>
                <text class='price'>{{item.money}}元博</text>
                <text class='title'>{{item.name}}</text>
            </view>
            <view class="purchase-item-img">
                <image class='image' src="{{item.imgUrl}}" mode="aspectFill" binderror="imgError" data-err-img="myitems[{{index}}]"></image>
            </view>
        </navigator>
    </view>
</view>